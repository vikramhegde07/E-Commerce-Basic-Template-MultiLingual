<IfModule mod_rewrite.c>
  RewriteEngine On

  # If your app is in a subfolder, uncomment and adjust:
  # RewriteBase /your-subfolder/

  # 1. Serve existing files or directories directly
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # 2. Dynamic product route
  #    Any /product/<slug> or /product/<slug>/ should serve the same file:
  #    /product/[slug].html
  RewriteRule ^product/[^/]+/?$ /product/[slug].html [L]

  # 3. Pretty URLs → existing .html files
  #    /about-us  → /about-us.html
  #    /brands    → /brands.html
  RewriteCond %{REQUEST_FILENAME}.html -f
  RewriteRule ^(.+)$ $1.html [L]

  # 4. Folder-style URLs → index.html inside that folder
  #    /some/path/ → /some/path/index.html
  RewriteCond %{REQUEST_FILENAME}/index.html -f
  RewriteRule ^(.+)/$ $1/index.html [L]

  # 5. Fallback: everything else goes to root index.html
  #    (for any remaining client-side routes if you add them later)
  RewriteRule . /index.html [L]
</IfModule>
